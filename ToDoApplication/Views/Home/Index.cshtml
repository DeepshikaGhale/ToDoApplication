@{
    ViewData["Title"] = "Home Page";
    List<ToDo>todos = ViewBag.Todos;
    var no = "No";
}


<h1 class="display-4">To Do List</h1>


<div>
    <a asp-action="Create">Create a task</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Task
            </th>
          
            <th>
                IsComplete
            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (ToDo item in todos)
            {
                
    <tr>
        <td>
            @item.Title
        </td>
        
        <td>
            @if (@item.IsComplete == false)
            {
                @no
            }
        </td>
       
    </tr>
    

    }
</tbody>
</table>

